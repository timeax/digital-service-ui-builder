{
    "$schema": "https://raw.githubusercontent.com/emxhive/prodex/main/schema/prodex.schema.json",
    "outDir": "prodex",
    "scanDepth": 5,
    "limit": 200,
    "resolverDepth": 10,
    "entry": {
        "includes": ["src", "src/schema"],
        "excludes": ["src/react/workspace", "src/styles", "**/__tests__/**"],
        "priority": ["src/index.ts", "src/react/index.ts"]
    },
    "imports": {
        "includes": ["**/*.d.ts", "**/*.interface.ts", "src/schema/**"],
        "excludes": ["node_modules/**", "**/components/ui/**"],
        "aliases": {
            "@hooks": "resources/js/hooks",
            "@data": "resources/js/data"
        }
    },
    "shortcuts": {
        "schema": {
            "include": ["src/schema/**"]
        },
        "core": {
            "include": ["src/core/**"]
        },
        "react-adapters": {
            "include": ["src/react/adapters/**"]
        },
        "react-canvas": {
            "include": ["src/react/canvas/**"]
        },
        "react-hooks": {
            "include": ["src/react/hooks/**"]
        },
        "react-inputs": {
            "include": ["src/react/inputs/**"]
        },
        "react-workspace": {
            "include": ["src/react/workspace/**"]
        },
        "react": {
            "include": ["src/react/index.ts"]
        },
        "utils": {
            "include": ["src/utils/**"]
        },
        "json-schema": {
            "include": ["schema/**"]
        }
    }
}
